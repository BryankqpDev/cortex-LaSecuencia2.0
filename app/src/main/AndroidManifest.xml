<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== PERMISOS ========== -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cortex_LaSecuencia"
        tools:targetApi="31">

        <!-- ========== SPLASH SCREEN (LAUNCHER) ========== -->
        <activity
            android:name=".actividades.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Cortex_LaSecuencia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ========== PANTALLA PRINCIPAL (CONDUCTORES) ========== -->
        <!-- âœ… CORRECCIÃ“N: MainActivity estÃ¡ en el paquete raÃ­z -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!-- ========== ðŸ”¥ CAPTURA BIOMÃ‰TRICA ========== -->
        <activity
            android:name=".BiometriaActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            tools:ignore="LockedOrientationActivity" />

        <!-- ========== LOGIN ADMINISTRADOR ========== -->
        <activity
            android:name=".actividades.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- ========== PANTALLA DE BIENVENIDA ========== -->
        <activity
            android:name=".actividades.WelcomeActivity"
            android:exported="false" />

        <!-- ========== INTRODUCCIÃ“N A TESTS ========== -->
        <activity
            android:name=".actividades.IntroTestActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <!-- ========== TESTS COGNITIVOS ========== -->
        <activity
            android:name=".actividades.ReflejosTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".actividades.SecuenciaTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".actividades.AnticipacionTestActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".actividades.CoordinacionTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".actividades.AtencionTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".actividades.EscaneoTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".actividades.ImpulsoTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".actividades.RastreoTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".actividades.EspacialTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".actividades.DecisionTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ========== REPORTE FINAL ========== -->
        <activity
            android:name=".actividades.ReporteFinalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ========== PANEL ADMINISTRADOR ========== -->
        <activity
            android:name=".actividades.AdminActivity"
            android:exported="false" />

        <!-- ========== PANTALLA DE BLOQUEO ========== -->
        <activity
            android:name=".actividades.LockedActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ========== FILE PROVIDER ========== -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>