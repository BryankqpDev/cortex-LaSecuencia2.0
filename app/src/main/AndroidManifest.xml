<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cortex_LaSecuencia"
        tools:targetApi="31">

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Cortex_LaSecuencia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".actividades.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.IntroTestActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".actividades.ReflejosTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".actividades.SecuenciaTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".actividades.AnticipacionTestActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".actividades.CoordinacionTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".actividades.AtencionTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".actividades.EscaneoTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".actividades.ImpulsoTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".actividades.RastreoTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".actividades.EspacialTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".actividades.DecisionTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".actividades.ReporteFinalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminActivity" android:exported="false" />
        <activity
            android:name=".LockedActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>