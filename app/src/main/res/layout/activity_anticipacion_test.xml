<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:fitsSystemWindows="true"
    android:paddingTop="8dp">

    <!-- âœ… VISOR DE CÃMARA (Esquina Superior Derecha) -->

    <!-- TÃ­tulo y SubtÃ­tulo -->

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="61dp"
        android:layout_height="73dp"
        android:layout_margin="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_titulo_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. ANTICIPACIÃ“N"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ãrea de Juego (Pista) -->

    <TextView
        android:id="@+id/txt_subtitulo_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_badge"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="FRENA EN ZONA VERDE (INTENTO 1/2)"
        android:textColor="#00F0FF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_t3" />

    <FrameLayout
        android:id="@+id/pista_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0F172A"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_frenar"
        app:layout_constraintTop_toBottomOf="@+id/txt_subtitulo_t3">

        <View
            android:id="@+id/zona_meta"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="60dp"
            android:background="#4410B981" />

        <ImageView
            android:id="@+id/ic_pickup"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_pickup"
            android:rotation="360"/>
    </FrameLayout>

    <!-- BotÃ³n de Frenado -->
    <Button
        android:id="@+id/btn_frenar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="ðŸ›‘ FRENAR"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="#EF4444"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contador de inicio -->
    <TextView
        android:id="@+id/txt_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>