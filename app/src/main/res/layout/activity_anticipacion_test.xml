<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121">

    <!-- Contenido del test principal -->
    <TextView
        android:id="@+id/txt_titulo_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. ANTICIPACIÃ“N"
        android:textColor="#00F0FF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_subtitulo_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frena en la ZONA VERDE"
        android:textColor="#94A3B8"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_t3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/pista_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0F172A"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_frenar"
        app:layout_constraintTop_toBottomOf="@+id/txt_subtitulo_t3">

        <View
            android:id="@+id/zona_meta"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="50dp"
            android:background="#4410B981" />

        <View
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="50dp"
            android:background="@drawable/borde_zona_verde" />

        <ImageView
            android:id="@+id/img_vehiculo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|start"
            android:src="@android:drawable/ic_menu_send" 
            app:tint="#FFFFFF"
            android:rotation="90"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_frenar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="ðŸ›‘ FRENAR"
        android:textSize="30sp"
        android:textStyle="bold"
        android:backgroundTint="#EF4444"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cuenta regresiva (inicialmente oculta) -->
    <TextView
        android:id="@+id/txt_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="90sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SuperposiciÃ³n para aviso de orientaciÃ³n (inicialmente oculta) -->
    <FrameLayout
        android:id="@+id/orientation_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D90B1121" 
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:drawable/ic_menu_rotate" 
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gire el dispositivo para continuar"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAlignment="center"/>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>