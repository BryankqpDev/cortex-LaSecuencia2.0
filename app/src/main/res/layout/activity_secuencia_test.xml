<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:fitsSystemWindows="true"
    android:paddingTop="8dp">

    <!-- ✅ VISOR DE CÁMARA (Esquina Superior Derecha) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinderSeq"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_titulo_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. SECUENCIA"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_intento_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTENTO 1/2"
        android:textColor="#00F0FF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/bg_badge"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_seq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/grid_botones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View android:id="@+id/btn_1" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />
        <View android:id="@+id/btn_2" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />
        <View android:id="@+id/btn_3" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />

        <View android:id="@+id/btn_4" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />
        <View android:id="@+id/btn_5" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />
        <View android:id="@+id/btn_6" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />

        <View android:id="@+id/btn_7" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />
        <View android:id="@+id/btn_8" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />
        <View android:id="@+id/btn_9" android:layout_width="75dp" android:layout_height="75dp" android:layout_margin="8dp" android:background="@drawable/boton_secuencia_base" android:backgroundTint="#1E293B" />

    </GridLayout>

    <TextView
        android:id="@+id/txt_instruccion_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/t2_instruction_observe"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/grid_botones" />

</androidx.constraintlayout.widget.ConstraintLayout>