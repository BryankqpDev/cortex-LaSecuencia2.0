<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:padding="20dp">

    <!-- ✅ VISOR DE CÁMARA -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. ATENCIÓN (STROOP)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_instruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IGNORA LA PALABRA\nMARCA EL COLOR DE LA TINTA"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 10"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txt_instruccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_palabra_stroop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROJO"
        android:textSize="60sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        app:layout_constraintTop_toBottomOf="@id/txt_contador"
        app:layout_constraintBottom_toTopOf="@+id/grid_botones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/grid_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_rojo"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="ROJO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#EF4444"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_verde"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="VERDE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#10B981"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_azul"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="AZUL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#3B82F6"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_amarillo"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="AMARILLO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#F59E0B"
            android:textColor="#000000"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>