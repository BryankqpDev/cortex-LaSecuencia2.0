<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/txt_icono_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="â³"
            android:textSize="70sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPORTE FINAL"
            android:textColor="#00F0FF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"/>

        <TextView
            android:id="@+id/txt_puntaje_global"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="--%"
            android:textColor="#FFFFFF"
            android:textSize="90sp"
            android:textStyle="bold"
            android:shadowColor="#2563EB"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="30"/>

        <TextView
            android:id="@+id/txt_estado_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULANDO..."
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_mensaje_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="..."
            android:textColor="#CBD5E1"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/container_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="#151E32"
            android:padding="15dp"
            android:divider="?android:attr/listDivider"
            android:showDividers="middle">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*PDF Generado AutomÃ¡ticamente"
            android:textColor="#64748B"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_reiniciar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#2563EB"
            android:text="ðŸ”„ NUEVA EVALUACIÃ“N"
            android:textColor="@color/white"
            android:background="@drawable/bg_boton_redondeado"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_descargar_pdf"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="DESCARGAR PDF"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_pdf"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
</ScrollView>