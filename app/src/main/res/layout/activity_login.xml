<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cortex_surface">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="400dp">

        <ImageView
            android:id="@+id/img_helmet_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_helmet_mining"
            android:layout_marginBottom="16dp"
            app:tint="@color/cortex_tech" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_title"
            android:textColor="@color/cortex_tech"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_subtitle"
            android:textColor="@color/cortex_text_muted"
            android:textSize="14sp"
            android:layout_marginBottom="40dp" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_email"
            android:textColorHint="@color/cortex_text_muted"
            android:textColor="@color/cortex_tech"
            android:paddingStart="16dp"
            android:background="@drawable/bg_input_field"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_password"
            android:textColorHint="@color/cortex_text_muted"
            android:textColor="@color/cortex_tech"
            android:paddingStart="16dp"
            android:background="@drawable/bg_input_field"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp" />

        <!-- ✅ CHECKBOX MANTENER SESIÓN -->
        <CheckBox
            android:id="@+id/cb_mantener_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_keep_session"
            android:textColor="@color/cortex_text_muted"
            android:textSize="14sp"
            android:checked="true"
            android:layout_marginBottom="24dp"
            android:buttonTint="@color/cortex_tech" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/btn_login"
            android:backgroundTint="#2563EB"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/btn_register"
            android:backgroundTint="#10B981"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txt_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_forgot_password"
            android:textColor="@color/cortex_text_muted"
            android:textSize="13sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>