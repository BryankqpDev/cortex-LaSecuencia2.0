<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <!-- TÍTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8. RASTREO"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <!-- SUBTÍTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONCIENCIA SITUACIONAL (MOT)"
        android:textColor="#00F0FF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <!-- BADGE DE INTENTO -->
    <TextView
        android:id="@+id/txt_intento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTENTO 1/2"
        android:textColor="#00F0FF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/bg_badge"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="15dp"/>

    <!-- MENSAJE DE ESTADO -->
    <TextView
        android:id="@+id/txt_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memorice las 2 bolitas AZULES"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:minHeight="50dp"
        android:gravity="center"/>

    <!-- ÁREA DE RASTREO -->
    <FrameLayout
        android:id="@+id/area_rastreo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_area_rastreo"
        android:layout_marginBottom="15dp">

        <!-- Las bolas se generan dinámicamente aquí -->

    </FrameLayout>

    <!-- BOTÓN CONFIRMAR -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirmar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="CONFIRMAR (0)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_confirmar"
        android:visibility="gone"/>

</LinearLayout>