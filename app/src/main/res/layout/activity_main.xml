<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- HEADER CON INFO DE USUARIO Y CERRAR SESIÃ“N -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_usuario_actual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_session_active"
                android:textColor="#94A3B8"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_cerrar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btn_exit"
                android:textSize="11sp"
                android:backgroundTint="#64748B"
                android:textColor="#FFFFFF"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_registration"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sentinel_mode"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_company"
            android:textColor="#06B6D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_empresa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_dark"
            android:hint="@string/hint_company_name"
            android:textColorHint="#475569"
            android:textColor="#FFFFFF"
            android:paddingStart="15dp"
            android:inputType="textCapWords"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_supervisor"
            android:textColor="#06B6D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_supervisor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_dark"
            android:hint="@string/hint_supervisor_name"
            android:textColorHint="#475569"
            android:textColor="#FFFFFF"
            android:paddingStart="15dp"
            android:inputType="textCapWords"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_driver"
            android:textColor="#06B6D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_dark"
            android:hint="@string/hint_driver_name"
            android:textColorHint="#475569"
            android:textColor="#FFFFFF"
            android:paddingStart="15dp"
            android:inputType="textCapWords"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_dni"
            android:textColor="#06B6D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_dni"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_dark"
            android:hint="@string/hint_document"
            android:textColorHint="#475569"
            android:textColor="#FFFFFF"
            android:paddingStart="15dp"
            android:inputType="number"
            android:maxLength="8"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_equipment_type"
            android:textColor="#06B6D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_dark"
            android:layout_marginBottom="15dp">
            <Spinner
                android:id="@+id/spinner_equipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/lista_equipos"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_unit"
            android:textColor="#06B6D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_unidad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_dark"
            android:hint="@string/hint_unit_plate"
            android:textColorHint="#475569"
            android:textColor="#FFFFFF"
            android:paddingStart="15dp"
            android:inputType="textCapCharacters"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/btn_next"
            android:backgroundTint="#2563EB"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_boton_redondeado"/>

        <Button
            android:id="@+id/btn_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_admin"
            android:textColor="#64748B"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>