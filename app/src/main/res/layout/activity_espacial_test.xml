<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:padding="20dp">

    <!-- âœ… VISOR DE CÃMARA (Esquina Superior Derecha) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:text="9. ORIENTACIÃ“N ESPACIAL"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/viewFinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- FLECHA PRINCIPAL - Cambiamos el drawable -->
    <TextView
        android:id="@+id/txt_instruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="ðŸŸ¦ FLECHA AZUL: DirecciÃ³n Real\nðŸŸ¥ FLECHA ROJA: DirecciÃ³n CONTRARIA"
        android:textAlignment="center"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo" />

    <ImageView
        android:id="@+id/img_flecha"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_flecha"
        android:scaleType="fitCenter"
        android:contentDescription="Flecha direccional"
        app:layout_constraintTop_toBottomOf="@id/txt_instruccion"
        app:layout_constraintBottom_toTopOf="@+id/grid_controles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GRID DE CONTROLES -->
    <GridLayout
        android:id="@+id/grid_controles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fila 1: Espacio, BotÃ³n Arriba, Espacio -->
        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/btn_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@android:drawable/arrow_up_float"
            android:backgroundTint="#1E293B"
            android:contentDescription="Arriba"/>

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"/>

        <!-- Fila 2: BotÃ³n Izquierda, Espacio, BotÃ³n Derecha -->
        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@android:drawable/arrow_down_float"
            android:rotation="90"
            android:backgroundTint="#1E293B"
            android:contentDescription="Izquierda"/>

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/btn_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@android:drawable/arrow_down_float"
            android:rotation="270"
            android:backgroundTint="#1E293B"
            android:contentDescription="Derecha"/>

        <!-- Fila 3: Espacio, BotÃ³n Abajo, Espacio -->
        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/btn_down"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@android:drawable/arrow_down_float"
            android:backgroundTint="#1E293B"
            android:contentDescription="Abajo"/>

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>