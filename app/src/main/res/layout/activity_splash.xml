<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cortex_surface"
    android:padding="20dp">

    <!-- Logo Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logo_container"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_title"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/icon_helmet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_helmet_mining"
            android:scaleType="fitCenter"
            android:alpha="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/icon_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”·"
            android:textSize="40sp"
            android:background="@drawable/bg_chip"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/icon_dumptruck"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_dumptruck"
            android:contentDescription="Dump Truck"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CORTEX"
        android:textColor="@color/cortex_tech"
        android:textSize="56sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@id/logo_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Slogan -->
    <TextView
        android:id="@+id/txt_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTELIGENCIA ARTIFICIAL PARA LA SEGURIDAD HUMANA"
        android:textColor="@color/cortex_accent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- Credits -->

    <LinearLayout
        android:id="@+id/credits_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREADOR"
            android:textColor="@color/cortex_text_muted"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ING. BRAYAM OMAR VILLENA CUBA"
            android:textColor="@color/cortex_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="SOPORTE: 933665602"
            android:textColor="@color/cortex_text_muted"
            android:textSize="10sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_author"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_cat_huan"
        android:scaleType="fitCenter"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>