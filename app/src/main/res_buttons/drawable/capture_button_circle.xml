<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Círculo exterior blanco -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>

    <!-- Círculo interior transparente (efecto anillo) -->
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#0A2E3D" />
        </shape>
    </item>

</layer-list>